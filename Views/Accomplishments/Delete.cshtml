@model WarApp.Models.tblWAR_Accomplishments

@{
    ViewBag.Title = "Delete";
}
<table style="background-color:#FFFFFF; padding: 5px;width:100%" cellpadding="6" cellspacing="6">
    <tr>
        <td align="left" with="100%">
            <h2>Delete</h2>

            <h3>Are you sure you want to delete the selected WAR accomplishment?</h3>
            <div>
                <!--
                <h4>WAR Accomplishment</h4>
                 -->
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Accomplishment Status")
                        @*
                        @Html.DisplayNameFor(model => model.lutWAR_AccStatus.Status)
                        *@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.lutWAR_AccStatus.Status)
                    </dd>

                    <dt>
                        @Html.DisplayName("Project Name")
                        @*
                        @Html.DisplayNameFor(model => model.lutWAR_Projects.ProjectName)
                        *@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.lutWAR_Projects.ProjectName)
                    </dd>
                    <!-- HIDE UNTIL DISPLAY USER ONLY ACCOMPLISHMENTS FUNCTIONALITY IS IMPLEMENTED 
                    @*
                    <dt>
                        @Html.DisplayNameFor(model => model.tblER_Employee.FirstName)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tblER_Employee.FirstName)
                    </dd>
                    *@
                    -->

                    <dt>
                        @Html.DisplayName("Accomplishment")
                        @*
                        @Html.DisplayNameFor(model => model.Accomplishment)
                        *@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Accomplishment)
                    </dd>

                    <dt>
                        @Html.DisplayName("Week Ending Date")
                        @*
                        @Html.DisplayNameFor(model => model.WeekEndingDate)
                        *@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.WeekEndingDate)
                    </dd>
                    @if (User.IsInRole("Admin"))
                    {
                    <dt>
                        @Html.DisplayName("Archived?")
                        @*
                        @Html.DisplayNameFor(model => model.AccArchieve)
                        *@
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AccArchieve)
                    </dd>
                    }
                </dl>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }

        </td>
    </tr>
</table>